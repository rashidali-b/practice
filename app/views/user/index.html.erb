<h1>User#index</h1>
<% if !flash[:notification].blank? %>
    <%=flash[:notification] %>
<% end %>
<%=  link_to "Add User", "user/new",:class => 'action new' %> 
<table style="width:100%">
    <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Password</th>
        <th>Action</th>
    </tr>
    <% @user.each do |i| %>
        <tr style="text-align: center;">
            <td><%= i.first_name %></td>
            <td><%= i.last_name %></td>
            <td><%= i.email %></td>
            <td><%= i.password %></td>
            <td>
                <%= link_to "Show",user_path(i.id ),:class => 'action show' %>
                <%= link_to "Edit", edit_user_path(i.id ),:class => 'action edit' %>
                <%= link_to "Delete", delete_user_path(i.id ),:class => 'action delete' %>
            </td>
        </tr>
    <%end%>
  </table>
