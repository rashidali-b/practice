<div>
    <%= form_for(@user,:url=>'/user' ,:method=>'post') do |f| %>
    <table>
    
        <tr>
            <td>First Name</td>
            <td><%= f.text_field( :first_name) %></td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td><%= f.text_field( :last_name) %></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><%= f.text_field( :email) %></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><%= f.password_field( :password) %></td>
        </tr>
        <tr>
            <td></td>
            <td><%= f.submit("Submit") %></td>
        </tr>
           
    </table>    
    <% end %>
    
</div>

